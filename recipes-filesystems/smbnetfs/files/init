#!/bin/sh

MOUNTPOINT=/media/samba

case "$1" in
	start)
		test -d "${MOUNTPOINT}" || mkdir "${MOUNTPOINT}"
		if ! /usr/bin/smbnetfs -o allow_root config=/etc/smbnetfs.common.conf "${MOUNTPOINT}"
		then
			rmdir "${MOUNTPOINT}"
			exit 1
		fi
		;;
	stop)
		killall /usr/bin/smbnetfs
		rmdir "${MOUNTPOINT}"
		;;
	*)
		exit 1
		;;
esac
